<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sahyog.collaboration_activity">


    <include layout="@layout/app_bar_layout" />

    <ScrollView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="60dp"
                android:text="Subject/Title"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Requirement For"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:spinnerMode="dropdown"
                android:theme="@style/spinnerStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Post Expire By"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Details"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:inputType="text" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/doc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingTop="20dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/document"
                    android:text="Document"
                    android:textAllCaps="false"
                    android:visibility="invisible"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/link"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="130dp"
                    android:paddingTop="20dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/link"
                    android:visibility="invisible"
                    android:text="Link"
                    android:textAllCaps="false"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="130dp"
                    android:paddingTop="20dp"
                    android:visibility="invisible"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/image"
                    android:text="Image"
                    android:textAllCaps="false"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/video"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="250dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/video"
                    android:visibility="invisible"
                    android:paddingTop="20dp"
                    android:text="Video"
                    android:textAllCaps="false"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="250dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/camera"
                    android:visibility="invisible"
                    android:paddingTop="20dp"
                    android:text="Take photo"
                    android:textAllCaps="false"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/attach"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="180dp"
                    android:paddingTop="15dp"
                    android:background="@drawable/circle"
                    android:drawableTop="@drawable/attach"
                    android:textColor="#000" />
            </RelativeLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:background="@drawable/button"
                android:text="NEXT"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>